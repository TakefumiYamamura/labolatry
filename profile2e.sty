%%%%%%%%2E PROFILE STYLE
\long\def\@profile#1#2#3#4{%
 \@profilecheck{#1}{#2}%
 \setbox\@tempboxa\hbox{\parbox[t]{\hsize}{\hangindent=22.5mm\hangafter=-9
  {\reset@font\footnotesize{\bfseries \leavevmode\@tempname}\p@membership}
  \rule[-2mm]{0mm}{2mm}%
   \hfil\break #3}}
 \@tempdima\ht\@tempboxa \advance \@tempdima \dp\@tempboxa
  \ifdim \@tempdima < 24mm
   \vbox to 24mm{%
    \leavevmode\smash{\rlap{%
    \lower22mm
     \vbox to 24mm{%\hrule height .1mm
%      \hbox to 20mm{%
%       \vrule width .1mm height 23.8mm
%        \hss
%       \vrule width .1mm height 23.8mm}%
%     \hrule height .1mm
\includegraphics[width=20mm,height=24mm]{#4.eps}}%
    }}%
    \if@blindreview
     \mbox{　}
    \else
     \box\@tempboxa
    \fi
   \vss}\par
  \else
   \leavevmode\smash{\rlap{\hskip-22.5mm
   \lower22mm
    \vbox to 24mm{%    \hrule height .1mm
%     \hbox to 20mm{%
%      \vrule width .1mm height 23.8mm
%       \hss
%      \vrule width .1mm height 23.8mm}%
%    \hrule height .1mm
\includegraphics[width=20mm,height=24mm]{#4.eps}}%
    }}%
    \if@blindreview
     \divide \@tempdima \baselineskip
     \@tempcnta\@tempdima
     \@tempcntb\z@
     \hangindent=22.5mm\hangafter=-9\relax
     \loop\ifnum\@tempcntb<\@tempcnta
      \advance \@tempcntb \@ne
      \mbox{　}\hfil\break
     \repeat
      \mbox{　}\par
    \else
     \hangindent=22.5mm\hangafter=-9\relax
      {\reset@font\footnotesize{\bfseries \leavevmode\@tempname}\p@membership}%
    \rule[-2mm]{0mm}{2mm}\hfil\break #3\par
    \fi
  \fi
 \nointerlineskip
 \vskip5mm
}


